<div class="action model-list-item <% if @action.done: %>done<% end %>" data-id="<%- @action.id %>">
  <div class="name">
    <span class="checkbox <% if @action.done: %>done<% end %>"></span>
    <a class="model-link" href="<%- @action.url %>">
      <%= @action.name %>
    </a>
    <% if @action.done: %>
      <span class="date" title='<%- @action.completed %>'><%- @action.completed %></span>
    <% end %>
  </div>
  <span class='dropdown'></span>
  </div>
</div>
