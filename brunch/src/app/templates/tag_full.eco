<div class="editable-name"></div>
<div class="editable-description"></div>
<div class="meta-info">
  <% if @tag.created?: %>
    Created: <%- new Date(@tag.created).toDateString() %><br />
  <% end %>
  <% if @tag.changed?: %>
    Last activity: <%- new Date(@tag.changed).toDateString() %><br />
  <% end %>
</div>
