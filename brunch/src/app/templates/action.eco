<div class="action <% if @action.done: %>done<% end %>" data-id="<%- @action.id %>">
  <div class="display">
    <input class="check" type="checkbox" <% if @action.done: %>checked="checked"<% end %>>
  <div class="action-name"><%= @action.name %></div>
    <span class="action-destroy"></span>
  </div>
  <div class="edit">
    <input class="action-input" type="text" value="<%= @action.name %>">
  </div>
</div>
