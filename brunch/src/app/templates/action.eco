<div class="action <% if @action.done: %>done<% end %>">
  <div class="display">
    <input class="check" type="checkbox" <% if @action.done: %>checked="checked"<% end %>>
  <div class="action-content"><%= @action.content %></div>
    <span class="action-destroy"></span>
  </div>
  <div class="edit">
    <input class="action-input" type="text" value="<%= @action.content %>">
  </div>
</div>
