<div class="project <% if @project.done: %>done<% end %>" data-id="<%- @project.id %>">
  <div class="display">
    <input class="check" type="checkbox" <% if @project.done: %>checked="checked"<% end %>>
  <div class="project-name"><%= @project.name %></div>
    <span class="project-destroy"></span>
  </div>
  <div class="edit">
    <input class="project-input" type="text" value="<%= @project.name %>">
  </div>
</div>
